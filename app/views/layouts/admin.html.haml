!!!
%html{ lang: 'en' }
  %head
    %meta{ content: 'text/html; charset=UTF-8', http: { equiv: 'Content-Type' } }
    %meta{ charset: 'utf-8' }
    %meta{ content: 'IE=edge', http: { equiv: 'X-UA-Compatible' } }
    %meta{ content: 'width=device-width, initial-scale=1', name: 'viewport' }

    %title Админка: CLEANER

    = stylesheet_link_tag    'admin', media: 'all'
    = javascript_include_tag 'admin'

    = csrf_meta_tags

    = favicon_link_tag

    / HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      = javascript_include_tag javascript_path('https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      = javascript_include_tag javascript_path('https://oss.maxcdn.com/respond/1.4.2/respond.min.js')

  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{ aria: { controls: 'navbar', expanded: 'false' }, data: { target: '#navbar', toggle: 'collapse' }, type: 'button' }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'CLEANER', root_path, class: 'navbar-brand'

        #navbar.navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to 'Админка', admin_root_path
            %li{ class: "#{'active' if controller_name == 'app_settings' }" }
              = link_to 'Настройки', admin_app_settings_path

    .container-fluid
      .row
        = render 'admin/shared/menu'

        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          = render 'admin/shared/flashes'
          = yield
